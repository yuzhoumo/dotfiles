# This .editorconfig file lives outside of all repositories in a parent
# directory (and should not be committed to source control). It includes
# personal preferences such as the indent size of a tab.

root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,ts,jsx,tsx,c,cpp,h,lua,rs,sh,zsh,html,json,yml,yaml}]
indent_style = space
indent_size = 2

[*.{py,java}]
indent_style = space
indent_size = 4

[*.{go}]
indent_style = tab
indent_size = 4

[Makefile]
indent_style = tab
